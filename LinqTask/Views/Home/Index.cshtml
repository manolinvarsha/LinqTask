@model IEnumerable<LinqTask.Models.ListOfPurchaseOrders>

@{ ViewBag.Title = "Index"; }


<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Purchased orders of customers</h4>
        <table class="table table-striped table-bordered">

            <thead class="bg-dark text-white">
                <tr>
                    <th>Customer Name</th>
                    <th>POID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>@item.customer.CustomerName </td>
        <td>@item.purchaseOrder.POID</td>
        <td>@item.product.ProductName</td>
        <td>@item.product.Price</td>
    </tr>
}
            </tbody>
        </table>
    </div>
    <div>

        <a href="~/Home/CustomerReport">CustomerReport</a>
    </div>
    <div>
        <a href="SalesReport">Sales Report</a>
        </div>
    <div>
        <a href="ProductNameList">ProductName List</a>
        </div>
    <div>
        <a href="MaximumPrice">MaximumPrice</a>

    </div>
</body>
</html>