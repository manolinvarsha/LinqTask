
@model IEnumerable < LinqTask.Models.CustomerReport>

@{ ViewBag.Title = "CustomerReport"; }

<h2>CustomerReport</h2>

<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Month wise Customer Report With Product</h4>
        <table class="table table-striped table-bordered">

            <thead class="bg-dark text-white">
                <tr>
                    <th>Date</th>
                    <th>Customer Name </th>
                    <th>Amount</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("MMM/yy")</td>
                        <td>@item.CustomerName.CustomerName </td>
                        <td>@item.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a href="Index">Back</a>

    </div>
</body>
</html>